# Hedera Network Configuration
NEXT_PUBLIC_HEDERA_NETWORK=testnet
NEXT_PUBLIC_HEDERA_MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com

# Hedera Account (for backend operations - DO NOT commit real keys!)
HEDERA_OPERATOR_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_OPERATOR_KEY=YOUR_PRIVATE_KEY_HERE

# NFT Collection Token ID (after creating collection)
SOUL_NFT_TOKEN_ID=0.0.YOUR_TOKEN_ID
NEXT_PUBLIC_SOUL_NFT_TOKEN_ID=0.0.YOUR_TOKEN_ID

# Evolution Topic ID (run: npx tsx scripts/create-evolution-topic.ts)
EVOLUTION_TOPIC_ID=0.0.YOUR_TOPIC_ID

# Smart Contract Addresses (after deployment)
NEXT_PUBLIC_SOUL_NFT_CONTRACT=0.0.CONTRACT_ID
NEXT_PUBLIC_MARKETPLACE_CONTRACT=0.0.CONTRACT_ID

# Optional: IPFS/File Storage
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io/ipfs/
PINATA_API_KEY=your_pinata_key
PINATA_SECRET_KEY=your_pinata_secret
